<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/call_activity_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.thedeveloperworldisyours.proximitysensor.CallActivity">

    <ImageButton
        android:id="@+id/call_activity_hook_off"
        android:layout_width="@dimen/call_activity_button_call_size"
        android:layout_height="@dimen/call_activity_button_call_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/call_activity_margin_button_call"
        android:background="@drawable/hook_off"
        android:onClick="activateSensor"
        android:src="@drawable/ic_call_hook_off" />

    <ImageButton
        android:id="@+id/call_activity_hung_up"
        android:layout_width="@dimen/call_activity_button_call_size"
        android:layout_height="@dimen/call_activity_button_call_size"
        android:layout_centerInParent="true"
        android:background="@drawable/hung_up"
        android:onClick="deactivateSensor"
        android:src="@drawable/ic_call_hang_up"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/theworldisyours" />

</RelativeLayout>
